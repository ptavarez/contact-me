<div class="col-lg-6 col-md-6 col-sm-6 cp-form">
  <div class="form-group">
    {{input type="password"
            class="form-control"
            id="previous"
            placeholder="Old password"
            value=passwords.previous}}
  </div>

  <div class="form-group">
    {{input type="password"
            class="form-control"
            id="next"
            placeholder="New password"
            value=passwords.next}}
  </div>

  <div class="form-group">
    {{input type="password"
            class="form-control"
            id="confirmNext"
            placeholder="New password confirmation"
            value=passwords.confirmNext}}
  </div>

  <button type="submit" class="col-lg-12 col-md-12 col-sm-12 btn btn-primary" {{action "submit"}}>
    Change Password
  </button>
</div>
