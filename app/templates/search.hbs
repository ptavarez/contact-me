<h3>Search Results</h3>

{{#if model}}

{{#each model as |contact|}}

  <div class='col-lg-6 col-md-6 col-sm-6'>
  {{#link-to 'contact' contact}}
    {{#if contact.first_name}}
      {{contact.first_name}}
    {{else}}
      Noname
    {{/if}}
    {{#if contact.last_name}}
      {{contact.last_name}}
    {{else}}
      Noname
    {{/if}}
  {{/link-to}}

    <ul>
      {{#if contact.job_title}}
        <li>Job Title: {{contact.job_title}}</li>
      {{else}}
        <li>Seeking Employment</li>
      {{/if}}
      {{#if contact.phone_number}}
        <li>Phone Number: {{contact.phone_number}}</li>
      {{else}}
        <li>Phone inactive</li>
      {{/if}}
      {{#if contact.email}}
        <li>Email: {{contact.email}}</li>
      {{else}}
        <li>Phone inactive</li>
      {{/if}}
    </ul>

  </div>

{{/each}}

{{else}}

<p>Your search does not match any contacts</p>

{{/if}}

<p class='col-lg-12 col-md-12 col-sm-12 text-center'>
  {{#link-to 'contacts'}}Return to Contacts{{/link-to}}
</p>
